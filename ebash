#!/bin/bash
set -euo pipefail

VERSION="1.7.2"

if [ "$1" == "--version" ]; then
  echo "ebash v$VERSION"
  exit 0
fi

# –ü—Ä–æ–≤–µ—Ä–∫–∞ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã—Ö –æ–∫—Ä—É–∂–µ–Ω–∏—è
if [ -z "${TELEGRAM_BOT_TOKEN:-}" ] || [ -z "${TELEGRAM_CHAT_ID:-}" ]; then
  echo "–û—à–∏–±–∫–∞: –∑–∞–¥–∞–π—Ç–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ TELEGRAM_BOT_TOKEN –∏ TELEGRAM_CHAT_ID!" >&2
  exit 1
fi

if ! command -v curl &> /dev/null; then
  echo "–û—à–∏–±–∫–∞: curl –Ω–µ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω!" >&2
  exit 1
fi

# –§—É–Ω–∫—Ü–∏—è –ø—Ä–æ–≤–µ—Ä–∫–∏ API
check_telegram_api() {
  if ! curl -s -f "https://api.telegram.org/bot${TELEGRAM_BOT_TOKEN}/getMe" > /dev/null; then
    echo "–û—à–∏–±–∫–∞: –Ω–µ —É–¥–∞–ª–æ—Å—å –ø–æ–¥–∫–ª—é—á–∏—Ç—å—Å—è –∫ Telegram API!" >&2
    return 1
  fi
  return 0
}

# –ê—Ä–≥—É–º–µ–Ω—Ç—ã –∫–æ–º–∞–Ω–¥–Ω–æ–π —Å—Ç—Ä–æ–∫–∏
if [ $# -eq 0 ]; then
  echo "Telegram Script Notifier v$VERSION"
  echo "–ò—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ: $0 <command> [args...]" >&2
  echo "               $0 --version" >&2
  exit 1
fi

# –í—Ä–µ–º–µ–Ω–Ω—ã–π —Ñ–∞–π–ª –ª–æ–≥–∞
LOG_FILE=$(mktemp)
trap 'rm -f "$LOG_FILE"' EXIT

# –£–ª—É—á—à–µ–Ω–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è –æ—Ç–ø—Ä–∞–≤–∫–∏ –≤ Telegram
send_telegram() {
  local message="$1"
  # –≠–∫—Ä–∞–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ —Ç–æ–ª—å–∫–æ –∫—Ä–∏—Ç–∏—á–Ω—ã—Ö —Å–∏–º–≤–æ–ª–æ–≤
  message="${message//\`/\\\`}"
  
  local max_retries=3
  local delay=2
  local attempt=0
  local success=0
  local response
  local http_code
  local json_response

  while [ $attempt -lt $max_retries ]; do
    # –°–æ—Ö—Ä–∞–Ω—è–µ–º –æ—Ç–≤–µ—Ç –≤–º–µ—Å—Ç–µ —Å HTTP-–∫–æ–¥–æ–º
    response=$(curl -s -m 10 -w "\n%{http_code}" -X POST \
      "https://api.telegram.org/bot${TELEGRAM_BOT_TOKEN}/sendMessage" \
      -d "chat_id=${TELEGRAM_CHAT_ID}" \
      -d "text=$message" \
      -d "parse_mode=Markdown" 2>> "$LOG_FILE")
    
    # –ò–∑–≤–ª–µ–∫–∞–µ–º HTTP-–∫–æ–¥ –∏–∑ –ø–æ—Å–ª–µ–¥–Ω–µ–π —Å—Ç—Ä–æ–∫–∏
    http_code=$(echo "$response" | tail -n1)
    # –¢–µ–ª–æ –æ—Ç–≤–µ—Ç–∞ (–±–µ–∑ HTTP-–∫–æ–¥–∞)
    json_response=$(echo "$response" | sed '$d')
    
    if [ "$http_code" -eq 200 ]; then
      success=1
      break
    else
      # –õ–æ–≥–∏—Ä—É–µ–º –æ—à–∏–±–∫—É
      echo "–ü–æ–ø—ã—Ç–∫–∞ $((attempt+1)) –Ω–µ —É–¥–∞–ª–∞—Å—å. HTTP: $http_code" >> "$LOG_FILE"
      echo "–û—Ç–≤–µ—Ç: $json_response" >> "$LOG_FILE"
      sleep $delay
      attempt=$((attempt+1))
      delay=$((delay*2))
    fi
  done

  if [ $success -eq 0 ]; then
    echo "–û—à–∏–±–∫–∞: –Ω–µ —É–¥–∞–ª–æ—Å—å –æ—Ç–ø—Ä–∞–≤–∏—Ç—å —Å–æ–æ–±—â–µ–Ω–∏–µ –≤ Telegram –ø–æ—Å–ª–µ $max_retries –ø–æ–ø—ã—Ç–æ–∫" >&2
    echo "–ü–æ—Å–ª–µ–¥–Ω–∏–π –æ—Ç–≤–µ—Ç: HTTP $http_code" >&2
    echo "$json_response" | jq . >&2 2>/dev/null || echo "$json_response" >&2
    return 1
  fi
  
  return 0
}

# –ü—Ä–æ–≤–µ—Ä—è–µ–º –¥–æ—Å—Ç—É–ø–Ω–æ—Å—Ç—å API –ø–µ—Ä–µ–¥ –∑–∞–ø—É—Å–∫–æ–º
if ! check_telegram_api; then
  echo "–ü—Ä–æ–≤–µ—Ä–∫–∞ API Telegram –Ω–µ —É–¥–∞–ª–∞—Å—å. –ü—Ä–æ–¥–æ–ª–∂–µ–Ω–∏–µ –±–µ–∑ –æ—Ç–ø—Ä–∞–≤–∫–∏ —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–π." >&2
  # –ó–∞–ø—É—Å–∫–∞–µ–º –∫–æ–º–∞–Ω–¥—É –Ω–∞–ø—Ä—è–º—É—é
  "$@"
  exit $?
fi

# –ü–æ–ª—É—á–µ–Ω–∏–µ –∏–º–µ–Ω–∏ –∫–æ–º–∞–Ω–¥—ã
COMMAND_NAME=$(basename "$1")
START_MESSAGE="üöÄ *–ó–∞–ø—É—â–µ–Ω–∞ –∫–æ–º–∞–Ω–¥–∞ (ebash v$VERSION):* \`$COMMAND_NAME\`
üñ• *–•–æ—Å—Ç:* \`$(hostname)\`
üìÇ *–†–∞–±–æ—á–∏–π –∫–∞—Ç–∞–ª–æ–≥:* \`$(pwd)\`
üïí *–í—Ä–µ–º—è –∑–∞–ø—É—Å–∫–∞:* $(date +"%Y-%m-%d %H:%M:%S %Z")"

send_telegram "$START_MESSAGE"

# –û–±—Ä–∞–±–æ—Ç–∫–∞ –ø—Ä–µ—Ä—ã–≤–∞–Ω–∏—è (Ctrl+C)
interrupted() {
  echo -e "\n[ebash] –ü—Ä–µ—Ä–≤–∞–Ω–æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–º (Ctrl+C)"
  send_telegram "‚èπ *–ö–æ–º–∞–Ω–¥–∞ –ø—Ä–µ—Ä–≤–∞–Ω–∞ (ebash v$VERSION):* \`$COMMAND_NAME\`
üñ• *–•–æ—Å—Ç:* \`$(hostname)\`
üïí *–í—Ä–µ–º—è —Ä–∞–±–æ—Ç—ã:* $((SECONDS)) —Å–µ–∫"
  exit 130
}
trap interrupted SIGINT

# –ó–∞–ø—É—Å–∫–∞–µ–º –∫–æ–º–∞–Ω–¥—É —Å –ø–µ—Ä–µ—Ö–≤–∞—Ç–æ–º –≤—ã–≤–æ–¥–∞
start_time=$(date +%s)
set +e
# –£–Ω–∏–≤–µ—Ä—Å–∞–ª—å–Ω–æ–µ —Ä–µ—à–µ–Ω–∏–µ –¥–ª—è –≤—Å–µ—Ö –∫–æ–º–∞–Ω–¥
{
  if [[ "$(basename "$1")" == "rsync" ]]; then
    "$@" --no-progress 2>&1
  else
    "$@"
  fi
} | tee "$LOG_FILE"

exit_code=${PIPESTATUS[0]}

set -e
end_time=$(date +%s)
duration=$((end_time - start_time))

# –§–æ—Ä–º–∞—Ç–∏—Ä—É–µ–º –¥–ª–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å
formatted_duration=$(printf "%02d:%02d:%02d" $((duration/3600)) $(((duration%3600)/60)) $((duration%60)))

# –û–ø—Ä–µ–¥–µ–ª—è–µ–º —Å—Ç–∞—Ç—É—Å –≤—ã–ø–æ–ª–Ω–µ–Ω–∏—è
if [ $exit_code -eq 0 ]; then
  STATUS_EMOJI="‚úÖ"
  STATUS_TEXT="–£–°–ü–ï–®–ù–û"
elif [ $exit_code -eq 130 ]; then
  STATUS_EMOJI="‚èπ"
  STATUS_TEXT="–ü–†–ï–†–í–ê–ù–û –ü–û–õ–¨–ó–û–í–ê–¢–ï–õ–ï–ú"
else
  STATUS_EMOJI="‚ùå"
  STATUS_TEXT="–° –û–®–ò–ë–ö–û–ô"
fi

# –û—Å–Ω–æ–≤–Ω–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ
MAIN_MESSAGE="$STATUS_EMOJI *–ö–æ–º–∞–Ω–¥–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞ (ebash v$VERSION):* \`$COMMAND_NAME\`
‚åõ *–î–ª–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å:* $formatted_duration
üìã *–°—Ç–∞—Ç—É—Å:* $STATUS_TEXT
üïí *–í—Ä–µ–º—è –∑–∞–≤–µ—Ä—à–µ–Ω–∏—è:* $(date +"%Y-%m-%d %H:%M:%S %Z")
üî¢ *–ö–æ–¥ –≤—ã—Ö–æ–¥–∞:* $exit_code"

# –ü–æ–ª—É—á–∞–µ–º –ª–æ–≥–∏ –∏–∑ –≤—Ä–µ–º–µ–Ω–Ω–æ–≥–æ —Ñ–∞–π–ª–∞
LOG_CONTENT=""
if [ -s "$LOG_FILE" ]; then
  # –í—Å–µ–≥–¥–∞ –ø–æ–∫–∞–∑—ã–≤–∞–µ–º –ø–æ—Å–ª–µ–¥–Ω–∏–µ 10 —Å—Ç—Ä–æ–∫
  LOG_CONTENT=$(tail -n 10 "$LOG_FILE" 2>/dev/null || cat "$LOG_FILE")
  
  # –î–ª—è –æ—à–∏–±–æ–∫ rsync –¥–æ–±–∞–≤–ª—è–µ–º –¥–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã–π –∫–æ–Ω—Ç–µ–∫—Å—Ç
  if [[ "$COMMAND_NAME" == "rsync" && $exit_code -ne 0 ]]; then
    ERROR_LINE=$(grep -i "error\|fail\|warn" "$LOG_FILE" 2>/dev/null || head -n 1 "$LOG_FILE")
    LOG_CONTENT="$ERROR_LINE\n$LOG_CONTENT"
  fi
else
  LOG_CONTENT="(–ª–æ–≥–∏ –æ—Ç—Å—É—Ç—Å—Ç–≤—É—é—Ç)"
fi

# –§–æ—Ä–º–∞—Ç–∏—Ä—É–µ–º –ø–æ–ª–Ω–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ
FULL_MESSAGE="$MAIN_MESSAGE
üìù *–í—ã–≤–æ–¥ –∫–æ–º–∞–Ω–¥—ã:*
\`\`\`
$LOG_CONTENT
\`\`\`"

# –ì–∞—Ä–∞–Ω—Ç–∏—Ä–æ–≤–∞–Ω–Ω–∞—è –æ—Ç–ø—Ä–∞–≤–∫–∞ —Å–æ–æ–±—â–µ–Ω–∏—è
send_telegram "$FULL_MESSAGE" || {
  # –ï—Å–ª–∏ –Ω–µ —É–¥–∞–ª–æ—Å—å, –æ—Ç–ø—Ä–∞–≤–ª—è–µ–º —Ç–æ–ª—å–∫–æ –æ—Å–Ω–æ–≤–Ω–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ
  send_telegram "$MAIN_MESSAGE"
}

exit $exit_code