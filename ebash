#!/bin/bash
set -euo pipefail

# –í–µ—Ä—Å–∏—è —Å–∫—Ä–∏–ø—Ç–∞
VERSION="1.3.1"

# –ü—Ä–æ–≤–µ—Ä–∫–∞ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã—Ö –æ–∫—Ä—É–∂–µ–Ω–∏—è
if [ -z "${TELEGRAM_BOT_TOKEN:-}" ] || [ -z "${TELEGRAM_CHAT_ID:-}" ]; then
  echo "–û—à–∏–±–∫–∞: –∑–∞–¥–∞–π—Ç–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ TELEGRAM_BOT_TOKEN –∏ TELEGRAM_CHAT_ID!" >&2
  echo "–ò—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ: export TELEGRAM_BOT_TOKEN='—Ç–æ–∫–µ–Ω'" >&2
  echo "           export TELEGRAM_CHAT_ID='–∏–¥–µ–Ω—Ç–∏—Ñ–∏–∫–∞—Ç–æ—Ä'" >&2
  exit 1
fi

# –ü—Ä–æ–≤–µ—Ä–∫–∞ –¥–æ—Å—Ç—É–ø–Ω–æ—Å—Ç–∏ cURL
if ! command -v curl &> /dev/null; then
  echo "–û—à–∏–±–∫–∞: curl –Ω–µ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω!" >&2
  exit 1
fi

# –ü—Ä–æ–≤–µ—Ä–∫–∞ –¥–æ—Å—Ç—É–ø–Ω–æ—Å—Ç–∏ Telegram API
check_telegram_api() {
  if ! curl -s -f "https://api.telegram.org/bot${TELEGRAM_BOT_TOKEN}/getMe" > /dev/null; then
    echo "–û—à–∏–±–∫–∞: –Ω–µ —É–¥–∞–ª–æ—Å—å –ø–æ–¥–∫–ª—é—á–∏—Ç—å—Å—è –∫ Telegram API!" >&2
    echo "–ü—Ä–æ–≤–µ—Ä—å—Ç–µ —Ç–æ–∫–µ–Ω –±–æ—Ç–∞ –∏ –¥–æ—Å—Ç—É–ø–Ω–æ—Å—Ç—å —Å–µ—Ç–∏" >&2
    return 1
  fi
  return 0
}

# –ê—Ä–≥—É–º–µ–Ω—Ç—ã –∫–æ–º–∞–Ω–¥–Ω–æ–π —Å—Ç—Ä–æ–∫–∏
if [ $# -eq 0 ]; then
  echo "Telegram Script Notifier v$VERSION"
  echo "–ò—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ: $0 <script.sh> [–∞—Ä–≥—É–º–µ–Ω—Ç—ã...]" >&2
  echo "               $0 --version" >&2
  exit 1
fi

# –ü—Ä–æ–≤–µ—Ä–∫–∞ –≤–µ—Ä—Å–∏–∏
if [ "$1" == "--version" ]; then
  echo "ebash v$VERSION"
  exit 0
fi

# –í—Ä–µ–º–µ–Ω–Ω—ã–π —Ñ–∞–π–ª –ª–æ–≥–∞
LOG_FILE=$(mktemp)
trap 'rm -f "$LOG_FILE"' EXIT

# –§—É–Ω–∫—Ü–∏—è –æ—Ç–ø—Ä–∞–≤–∫–∏ –≤ Telegram
send_telegram() {
  local message="$1"
  # –≠–∫—Ä–∞–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ —Ç–æ–ª—å–∫–æ –æ–±—Ä–∞—Ç–Ω—ã—Ö –∫–∞–≤—ã—á–µ–∫
  message="${message//\`/\\\`}"
  
  # –ü–æ–ø—ã—Ç–∫–∞ –æ—Ç–ø—Ä–∞–≤–∫–∏ —Å –∏–≥–Ω–æ—Ä–∏—Ä–æ–≤–∞–Ω–∏–µ–º –æ—à–∏–±–æ–∫
  curl -s -X POST "https://api.telegram.org/bot${TELEGRAM_BOT_TOKEN}/sendMessage" \
    -d "chat_id=${TELEGRAM_CHAT_ID}" \
    -d "text=$message" \
    -d "parse_mode=Markdown" >/dev/null || true
}

# –ü–æ–ª—É—á–µ–Ω–∏–µ –∏–º–µ–Ω–∏ –∫–æ–º–∞–Ω–¥—ã
COMMAND_NAME=$(basename "$1")
START_MESSAGE="üöÄ *–ó–∞–ø—É—â–µ–Ω —Å–∫—Ä–∏–ø—Ç:* \`$COMMAND_NAME\`
üñ• *–•–æ—Å—Ç:* \`$(hostname)\`
üìÇ *–†–∞–±–æ—á–∏–π –∫–∞—Ç–∞–ª–æ–≥:* \`$(pwd)\`
üïí *–í—Ä–µ–º—è –∑–∞–ø—É—Å–∫–∞:* $(date +"%Y-%m-%d %H:%M:%S %Z")"

send_telegram "$START_MESSAGE"

# –û–±—Ä–∞–±–æ—Ç–∫–∞ –ø—Ä–µ—Ä—ã–≤–∞–Ω–∏—è (Ctrl+C)
interrupted() {
  echo -e "\n[ebash] –ü—Ä–µ—Ä–≤–∞–Ω–æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–º (Ctrl+C)"
  send_telegram "‚èπ *–°–∫—Ä–∏–ø—Ç –ø—Ä–µ—Ä–≤–∞–Ω:* \`$COMMAND_NAME\`
üñ• *–•–æ—Å—Ç:* \`$(hostname)\`
üïí *–í—Ä–µ–º—è —Ä–∞–±–æ—Ç—ã:* $((SECONDS)) —Å–µ–∫"
  exit 130
}
trap interrupted SIGINT

# –ó–∞–ø—É—Å–∫–∞–µ–º —Å–∫—Ä–∏–ø—Ç —Å –ø–µ—Ä–µ—Ö–≤–∞—Ç–æ–º –≤—ã–≤–æ–¥–∞
start_time=$(date +%s)
set +e
"$@" 2>&1 | tee "$LOG_FILE"
exit_code=${PIPESTATUS[0]}
set -e
end_time=$(date +%s)
duration=$((end_time - start_time))

# –§–æ—Ä–º–∞—Ç–∏—Ä—É–µ–º –¥–ª–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å
formatted_duration=$(printf "%02d:%02d:%02d" $((duration/3600)) $(((duration%3600)/60)) $((duration%60)))

# –§–æ—Ä–º–∏—Ä—É–µ–º —Å—Ç–∞—Ç—É—Å
if [ $exit_code -eq 0 ]; then
  STATUS_EMOJI="‚úÖ"
  STATUS_TEXT="–£–°–ü–ï–®–ù–û"
elif [ $exit_code -eq 130 ]; then
  STATUS_EMOJI="‚èπ"
  STATUS_TEXT="–ü–†–ï–†–í–ê–ù–û –ü–û–õ–¨–ó–û–í–ê–¢–ï–õ–ï–ú"
else
  STATUS_EMOJI="‚ùå"
  STATUS_TEXT="–° –û–®–ò–ë–ö–û–ô"
fi

# –û—Å–Ω–æ–≤–Ω–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ
MAIN_MESSAGE="$STATUS_EMOJI *–°–∫—Ä–∏–ø—Ç –∑–∞–≤–µ—Ä—à–µ–Ω:* \`$COMMAND_NAME\`
‚åõ *–î–ª–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å:* $formatted_duration
üìã *–°—Ç–∞—Ç—É—Å:* $STATUS_TEXT
üïí *–í—Ä–µ–º—è –∑–∞–≤–µ—Ä—à–µ–Ω–∏—è:* $(date +"%Y-%m-%d %H:%M:%S %Z")
üî¢ *–ö–æ–¥ –≤—ã—Ö–æ–¥–∞:* $exit_code"

# –ü–æ–ª—É—á–∞–µ–º –ª–æ–≥–∏ –î–û —Ç–æ—á–∫–∏ –æ—à–∏–±–∫–∏
LOG_CONTENT=""
if [ $exit_code -ne 0 ]; then
  # –î–ª—è –æ—à–∏–±–æ–∫: –±–µ—Ä–µ–º –ª–æ–≥–∏ –¥–æ –ø–æ—Å–ª–µ–¥–Ω–µ–π –æ—à–∏–±–∫–∏
  LOG_CONTENT=$(grep -B 10 -i "error\|fail\|exception\|undefined\|not found\|no such file" "$LOG_FILE" 2>/dev/null | tail -n 20 || head -n 20 "$LOG_FILE")
else
  # –î–ª—è —É—Å–ø–µ—Ö–∞: –ø–æ—Å–ª–µ–¥–Ω–∏–µ 10 —Å—Ç—Ä–æ–∫
  LOG_CONTENT=$(tail -n 10 "$LOG_FILE" 2>/dev/null || echo "–õ–æ–≥–∏ –Ω–µ–¥–æ—Å—Ç—É–ø–Ω—ã")
fi

# –§–æ—Ä–º–∏—Ä—É–µ–º –ø–æ–ª–Ω–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ
FULL_MESSAGE="$MAIN_MESSAGE
üìù *–õ–æ–≥–∏:*
\`\`\`
$LOG_CONTENT
\`\`\`"

# –û—Ç–ø—Ä–∞–≤–ª—è–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ
send_telegram "$FULL_MESSAGE" || {
  # –ï—Å–ª–∏ –Ω–µ —É–¥–∞–ª–æ—Å—å, –æ—Ç–ø—Ä–∞–≤–ª—è–µ–º —Ç–æ–ª—å–∫–æ –æ—Å–Ω–æ–≤–Ω–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ
  send_telegram "$MAIN_MESSAGE"
}

exit $exit_code